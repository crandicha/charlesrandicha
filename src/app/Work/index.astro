---
import GlitchText from '../../components/GlitchText'
import WorkExperiences from './WorkExperiences/index.astro'
import Skills from './Skills/index.astro'
---

<section id="work">
  <div class="m-auto max-w-[1140px] p-6 md:p-8">
    <GlitchText
      text="Work Experiences"
      as="h2"
      className="mb-4 text-center font-Montserrat text-3xl md:text-left md:text-4xl font-bold"
      client:idle
    />
    <WorkExperiences />
    <div class="mt-6 md:mt-8">
      <GlitchText
        text="Skills"
        as="h2"
        className="mb-4 text-center font-Montserrat text-3xl md:text-left md:text-4xl font-bold"
        client:idle
      />
      <Skills />
    </div>
  </div>
</section>
